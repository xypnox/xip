{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "removeComments": true,
    "jsxImportSource": "solid-js",
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "rollup.config.js",
  ]
}
