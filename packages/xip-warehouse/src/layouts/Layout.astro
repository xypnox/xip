---
import {cssVal} from '../theme';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="xip warehouse, a showcase of xip" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <style set:text={cssVal}></style>
	</head>
	<body class="body-contents">
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: sans-serif;
		background: var(--background);
    color: var(--text);
	}
  body {
    max-width: var(--layout-width);
    margin: 0 auto;
  }
  .body-contents {
    font-size: var(--font-size-step-0);
  }
  h1 {
    font-size: var(--font-size-step-4);
  }
  h2 {
    font-size: var(--font-size-step-3);
  }
  h3 {
    font-size: var(--font-size-step-2);
  }
  h4 {
    font-size: var(--font-size-step-1);
  }
	code {
		font-family: monospace;
	}
  a {
    color: var(--primary);
  }
</style>
