---
import {cssVal} from '../theme';
interface Props {
	title: string;
}

const { title } = Astro.props;
import Nav from '../components/nav.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="xip warehouse, a showcase of xip" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Mono:wght@400;500;700&family=Inter:wght@100..900&family=Source+Serif+4:ital,opsz,wght@0,8..60,200..900;1,8..60,200..900&display=swap" rel="stylesheet">
    <style set:html={cssVal}></style>
    <script>
      import { initTheme } from '../components/initTheme';
      initTheme();
    </script>
    <script>
      import 'iconify-icon';
    </script>
	</head>
	<body >
    <div class="body-contents">
      <Nav />
      <main>
        <slot />
      </main>
      <footer>
        <p>{new Date().getFullYear()} - Made by <a href="https://www.xypnox.com/">xypnox</a> </p>
      </footer>
    </div>
    <script>
      import { onModeSwitch } from '../components/switcherSc';
      // all buttons have data-mode-switcher attribute
      const switcherElements = document.querySelectorAll('[data-mode-switcher]');
      switcherElements.forEach((el) => {
        el.addEventListener('click', onModeSwitch);
      });
    </script>
	</body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
  }
	html {
		font-family: var(--font-family);
    font-size: 16px;
    margin: 0;
	}
  body {
		background: var(--background);
    color: var(--text);
    margin: 0;
    padding: 0;
  }
  .body-contents {
    font-size: var(--font-size-0);
    font-family: var(--font-family);
    max-width: var(--layout-width);
    margin: 0 auto;
  }
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading);
    color: var(--heading);
  }
  h1 {
    font-size: var(--font-size-4);
  }
  h2 {
    font-size: var(--font-size-3);
  }
  h3 {
    font-size: var(--font-size-2);
  }
  h4 {
    font-size: var(--font-size-1);
  }
  h1, h2, h3, h4 {
    font-weight: 500;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    margin-left: -0.05em;
  }
	pre, code {
		font-family: monospace;
    font-size: var(--font-size--1);
    line-height: 1.5;
	}
  a {
    color: var(--primary-5);
  }
  h1.title {
    font-size: var(--font-size-5);
  }
  blockquote {
    font-family: var(--font-heading);
    font-weight: 400;
    border-left: 0.2em solid var(--border);
    padding: 0.5em 1em;
    font-size: var(--font-size-1);
    margin: 1em 0;
    max-width: 60ch;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1em;
    width: 100%;
    border-bottom: 1px solid var(--border);
    ul {
      display: flex;
      align-items: stretch;
      flex-wrap: wrap;
      list-style: none;
      padding: 0;
      margin: 0;
    }
    a {
      display: inline-flex;
      align-items: center;
      padding: 0.5em 1em;
      text-decoration: none;
      color: var(--text);
      height: 100%;
    }
    a.home {
    }

    a.active.active {
      font-size: 1.1em;
      font-family: var(--font-heading);
      text-decoration: underline;
      color: var(--heading);
    }
  }

  footer {
    margin-top: 8em;
    padding-top: 1em;
    border-top: 1px solid var(--border);
    padding: 1em;
    opacity: 0.8;
    p {
      margin: 0;
      font-size: var(--font-size--1);
    }
  }
  code, pre {
    max-width: 100%;
    overflow-x: auto;
  }

  main {
		padding: 1em;
		color: var(--text);
		font-size: var(--font-size-0);
		line-height: 1.5;
    p {
      max-width: 50ch;
    }
    ul, ol {
      padding-left: 1em;
      li {
        margin-bottom: 0.5em;
      }
    }
  }

  hr {
    border: 0;
    border-top: 1px solid var(--border);
    margin: 2em 0;
  }

  figure.aside {
    float: right;
    clear: right;
    max-width: 40%;
    height: auto;
    gap: 0.5em;
    margin: -2em 2em 2em;
    figcaption {
      font-size: var(--font-size--1);
      color: var(--text--1);
    }
    img, svg {
      width: 100%;
      height: auto;
    }
  }
  @media (max-width: 800px) {
    figure.aside {
      float: none;
      max-width: 100%;
      margin: 2em 1em;
    }
  }
</style>
